	if Globals.Maybe.Builtin:
		vars = Globals.Builtin[Globals.Environment]
		if vars:
			for k in vars:
				Globals[k.Key] = k.Value

	if Globals.Maybe.Variables:
		vars = Globals.Variables[Globals.Environment]
